---
import { Icon } from 'astro-icon/components';

const {
  title = 'Want to put your SEO on autopilot?',
  description = 'is your AI-powered SEO companion for higher rankings',
  buttonText = 'Start ranking higher for free!',
  buttonLink = '/',
  showLogo = true,
} = Astro.props;
---

<div class="not-prose article-cta-wrapper my-12">
  <div
    class="article-cta w-full max-w-4xl mx-auto p-10 rounded-3xl bg-white relative overflow-hidden"
  >
    <div class="flex flex-col items-center text-center gap-8 relative z-10">
      <div
        class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-purple-600 to-pink-500 bg-clip-text text-transparent"
      >
        {title}
      </div>
      <div class="text-lg md:text-xl text-gray-700">
        <span class="inline-flex items-center">
          {showLogo && <Icon name="main-logo" class="h-4 w-auto inline mr-1" />}
        </span>
        {description}
      </div>
      <a
        href={buttonLink}
        target="_blank"
        class="cta-button inline-block text-white text-lg font-semibold px-10 py-4 rounded-full transform hover:-translate-y-1 transition-all duration-300"
      >
        {buttonText}
      </a>
    </div>
  </div>
</div>

<style>
  .article-cta-wrapper {
    perspective: 1000px;
  }

  .article-cta {
    box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.1);
  }

  .article-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(219deg, #a855f7, #ec4899, #a855f7);
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: border-animation 4s linear infinite;
  }

  @keyframes border-animation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .cta-button {
    background: linear-gradient(45deg, #a855f7, #ec4899);
    box-shadow: 0 4px 15px rgba(192, 38, 211, 0.35);
  }

  .cta-button:hover {
    box-shadow: 0 8px 25px rgba(192, 38, 211, 0.45);
  }
</style>
