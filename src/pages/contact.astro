---
import Layout from '~/layouts/PageLayout.astro';
import Features2 from '~/components/widgets/Features2.astro';
import ContactForm from '~/components/forms/ContactForm.tsx';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <ContactForm client:idle />

  <Features2
    title="We are here to help"
    items={[
      {
        title: 'Sales',
        description: `If you're interested in our products, want to learn more about our services, or need help with a purchase, we're here to help.`,
      },
      {
        title: 'Technical support',
        description:
          'Send us a message if you have questions about how to use our products, need help with a technical issue, or want to report a bug.',
      },
      {
        title: 'Collaborations',
        description:
          'We are always looking for new partnerships and collaborations. If you have an idea or a proposal, we would love to hear from you.',
      },
      // {
      //   title: 'Phone',
      //   description: '+1 (111) 111-111',
      //   icon: 'tabler:headset',
      // },
    ]}
  />
</Layout>
