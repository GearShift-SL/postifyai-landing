---
import FAQ from '~/components/landing/FAQ.astro';
import Features from '~/components/landing/Features.astro';
import FooterHero from '~/components/landing/FooterHero.astro';
import Hero from '~/components/landing/Hero.astro';
import Testimonials from '~/components/landing/Testimonials.astro';
import Transformation from '~/components/landing/Transformation.astro';
import PageLayout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import AsSeenOn from '~/components/landing/AsSeenOn.astro';
import Pricing from '~/components/landing/Pricing.tsx';
import DemoImage from '../assets/images/demo-image.webp';
---

<PageLayout>
  <section id="hero" class="scroll-mt-24">
    <Hero />
  </section>

  <!-- <section id="demovideo">
    <DemoVideo />
  </section> -->

  <section id="social-proof">
    <AsSeenOn
      logoLists={[
        {
          title: 'as seen on',
          logos: [
            { name: 'El Referente', icon: 'elreferente-logo', height: 8 },
            { name: 'Gearshift', icon: 'gearshift-logo', height: 8 },
            { name: 'SaaSHub', icon: 'saashub-logo', height: 10 },
          ],
        },
        {
          title: 'and used by',
          logos: [
            { name: 'AutoIPC', icon: 'autoipc-logo', height: 8 },
            { name: 'SynCal', icon: 'syncal-logo', height: 8 },
          ],
        },
      ]}
    />
  </section>

  <!-- Separator -->
  <div class="w-full max-w-5xl mx-auto px-4 my-5">
    <hr class="border-gray-200" />
  </div>

  <section id="transformation">
    <Transformation />
  </section>

  <section id="how-to-use" class="scroll-mt-24">
    <div class="max-w-6xl mx-auto px-4 py-12">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold mb-4">How does it work</h2>
      </div>

      <!-- Numbered list of steps -->
      <div class="flex flex-col gap-4 text-2xl">
        <div>1. 💻 Fill in your brand's website</div>
        <div>2. 🤖 Postify AI will analyze your brand's information</div>
        <div>3. 🧮 Select the type of article you want to create</div>
        <div>4. 🔍 Postify AI will analyze your competitors and find the best keywords</div>
        <div>5. 📝 Postify AI will create the SEO blog post for you</div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto px-4">
      <!-- <Image src={demoAnimation} alt="Demo preview" class="mx-auto rounded-4xl shadow-lg" loading="lazy" /> -->
      <Image src={DemoImage} alt="Demo preview" class="mx-auto" loading="lazy" />
    </div>
  </section>

  <!-- Separator -->
  <div class="w-full max-w-5xl mx-auto px-4 my-5">
    <hr class="border-gray-200" />
  </div>

  <section id="social-proof">
    <Testimonials />
  </section>

  <section id="features" class="scroll-mt-24">
    <Features />
  </section>

  <section id="faq" class="scroll-mt-24">
    <FAQ />
  </section>

  <section id="pricing" class="scroll-mt-24">
    <Pricing client:only="react" />
  </section>

  <section id="footer-hero">
    <FooterHero />
  </section>
</PageLayout>
