---
import FAQ from '@/components/landing/FAQ.astro';
import Features from '@/components/landing/Features.astro';
import Testimonials from '@/components/landing/Testimonials.astro';
import Transformation from '@/components/landing/Transformation.astro';
import PageLayout from '@/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import AsSeenOn from '@/components/landing/AsSeenOn.astro';
import Pricing from '@/components/landing/Pricing.tsx';
import DemoImage from '../assets/images/demo-image.webp';
import CTA from '@/components/landing/CTA';
import { Icon } from 'astro-icon/components';
---

<PageLayout
  metadata={{
    title: 'miseo - Automate SEO content generation',
    description:
      'miseo is a tool that helps you create SEO content catered for your brand with AI in seconds.',
  }}
>
  <section id="hero" class="scroll-mt-24">
    <div class="max-w-7xl mx-auto px-4 mt-16 relative">
      <div class="flex flex-col lg:flex-row items-center lg:gap-12 gap-2">
        {/* Left Column - Main Content */}
        <div class="flex-1 text-center lg:text-left">
          {/* Badge */}
          <div
            class="inline-flex items-center bg-gray-100 text-gray-700 px-4 py-2 rounded-full text-sm font-medium mb-6"
          >
            <Icon name="main-logo" class="text-sm mr-2" />
            #1 SEO blog post generator
            <span class="ml-2">⭐⭐⭐⭐⭐</span>
          </div>

          {/* Main Heading */}
          <h1 class="text-4xl lg:text-6xl font-bold mb-6 leading-tight">
            Create SEO blog content<br />
            <span class="text-primary">on autopilot</span>
          </h1>

          {/* Features List */}
          <div class="space-y-4 mb-8 text-left">
            <div class="flex items-start gap-3">
              <span class="text-2xl">🅱️</span>
              <div>
                <a
                  href="#feature-0"
                  class="font-semibold underline decoration-2 decoration-primary hover:decoration-primary/50"
                  >Fill in your brand's website</a
                >
                <span class="text-gray-600">
                  → miseo will <a
                    href="#how-to-use"
                    class="underline decoration-2 decoration-primary hover:decoration-primary/50"
                    >generate SEO blog posts for you in seconds</a
                  >
                </span>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl">📄</span>
              <div>
                <span class="font-semibold"
                  >miseo <a
                    href="#feature-0"
                    class="underline decoration-2 decoration-primary hover:decoration-primary/50"
                    >analyzes your brand
                  </a> to find the blog ideas and content</span
                >
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl">📊</span>
              <div>
                <span class="font-semibold">
                  <a
                    href="#feature-1"
                    class="underline decoration-2 decoration-primary hover:decoration-primary/50"
                    >Analyzes your competitors to rank higher</a
                  > in search engines</span
                >
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl">⚡</span>
              <div>
                <span class="font-semibold">
                  <a
                    href="#feature-2"
                    class="underline decoration-2 decoration-primary hover:decoration-primary/50"
                    >Keyword research</a
                  > for your brand</span
                >
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl">🧑‍💻</span>
              <div>
                <span class="font-semibold">
                  postify AI is <a
                    href="#open-source"
                    class="underline decoration-2 decoration-primary hover:decoration-primary/50"
                    >Open Source</a
                  > and free to use!</span
                >
              </div>
            </div>
          </div>
        </div>

        {/* Right Column - Signup Form */}
        <div class="flex-1 max-w-md">
          <CTA client:load />
        </div>
      </div>
    </div>
  </section>

  <!-- <section id="demovideo">
    <DemoVideo />
  </section> -->

  <section id="social-proof">
    <AsSeenOn
      logoLists={[
        {
          title: 'as seen on',
          logos: [
            { name: 'El Referente', icon: 'elreferente-logo', height: 8 },
            { name: 'Gearshift', icon: 'gearshift-logo', height: 8 },
            { name: 'SaaSHub', icon: 'saashub-logo', height: 10 },
          ],
        },
        {
          title: 'and used by',
          logos: [
            { name: 'AutoIPC', icon: 'autoipc-logo', height: 8 },
            { name: 'SynCal', icon: 'syncal-logo', height: 8 },
          ],
        },
      ]}
    />
  </section>

  <!-- Separator -->
  <div class="w-full max-w-5xl mx-auto px-4 my-5">
    <hr class="border-gray-200" />
  </div>

  <section id="transformation">
    <Transformation
      title={`Save 4 hours a day writing <span class="text-primary">SEO blog posts</span>`}
      problemMix={[
        {
          type: 'problem',
          name: 'time consuming',
        },
        {
          type: 'problem',
          name: 'low quality',
        },
        {
          type: 'problem',
          name: 'no traffic',
        },
        {
          type: 'problem',
          name: 'low engagement',
        },
        {
          type: 'problem',
          name: 'ranking low',
        },
      ]}
      solutions={[
        'Create SEO blog posts in seconds',
        'Find the best keywords',
        'Analyze your competitors',
      ]}
    />
  </section>

  <section id="how-to-use" class="scroll-mt-24">
    <div class="max-w-6xl mx-auto px-4 py-12">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold mb-4">How does it work</h2>
      </div>

      <!-- Numbered list of steps -->
      <div class="flex flex-col gap-4 text-2xl">
        <div>1. 💻 Fill in your brand's website</div>
        <div>2. 🤖 miseo will analyze your brand's information and gather the best keywords</div>
        <div>3. 🧮 Select the type of article you want to create</div>
        <div>4. 🔍 miseo will analyze your competitors and find the best keywords</div>
        <div>5. 📝 miseo will create the SEO blog post for you</div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto px-4">
      <!-- <Image src={demoAnimation} alt="Demo preview" class="mx-auto rounded-4xl shadow-lg" loading="lazy" /> -->
      <Image src={DemoImage} alt="Demo preview" class="mx-auto" loading="lazy" />
    </div>
  </section>

  <!-- Separator -->
  <div class="w-full max-w-5xl mx-auto px-4 my-5">
    <hr class="border-gray-200" />
  </div>

  <section id="social-proof">
    <Testimonials
      testimonials={[
        {
          name: 'Marta',
          rating: 5,
          text: 'I used to spend countless hours trying to find ideas for my company\'s blog. Now I can just click "create post" and miseo does the rest.',
          verified: true,
        },
        {
          name: 'John',
          rating: 5,
          text: 'Best investment I made for my business. I used to delegate creating blog posts to my team, but they are not SEO experts and it was taking a lot of time to rank on Google. miseo writes a cool article in seconds.',
          verified: true,
        },
        {
          name: 'Rebecca',
          rating: 4,
          text: "I don't think it has the quality of an expert human writer, but honestly, for the price it's a great investment, it helps us with ideas and content, we just have to revise the article in a couple of minutes and post it.",
          verified: true,
        },
      ]}
    />
  </section>

  <section id="features" class="scroll-mt-24">
    <Features />
  </section>

  <section id="faq" class="scroll-mt-24">
    <FAQ />
  </section>

  <section id="pricing" class="scroll-mt-24">
    <Pricing client:only="react" />
  </section>

  <section
    id="footer-hero"
    class="w-full min-h-[60vh] flex items-center justify-center py-16 px-4 bg-gradient-to-b from-white to-blue-100"
  >
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-5xl font-medium leading-tight mb-6">
        Start generating efortless
        <span class="text-primary">SEO optimized blog posts</span> today
      </h2>
      <p class="text-base md:text-lg text-gray-800 max-w-3xl mx-auto mb-10">
        miseo is your personal AI SEO assistant that will help you boost your website's SEO.
      </p>

      <div class="flex items-center justify-center">
        <a href="#" class="cta-primary">Start generating blog posts today</a>
      </div>
    </div>
  </section>
</PageLayout>
